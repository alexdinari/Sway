<div id="Comment" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4 id="modalHeaders">Add Comment</h4>
    <div class="row">
      <div class = "container">

        <%= form_for([@trend, @trend.comments.build])do %>

        <div class="row">
          <div class="input-field col s12">
            <%= text_field_tag :body,nil,class: "validate" %>
            <label for="write comment">speak your mind</label>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="mdi-content-send right"></i>
    </button>
  </div>

  <% end %>
</div>





