<!-- NAVBAR -->
<nav>
  <div class="nav-wrapper">

    <!-- TRENDS SIDEBAR -->
    <ul id="slide-out" class="side-nav">
      <% @trends.each do |tweet| %>
      <li class="trendsclick"><a href="#!"><%= tweet.hashtags %></a></li>
      <% end %>
    </ul>
    <a href="#" data-activates="slide-out" class="button-collapse show-on-large">
      <i class="mdi-navigation-menu"></i>
    </a>

    <!-- LOGO -->
    <div class="brand-logo center">Sway News</div>

    <!-- SIGNUP + SIGNIN -->
    <ul id="nav-mobile" class="right hide-on-med-and-down">
      <% if current_user %>
        <li>Welcome <strong><%= current_user.name%></strong></li>
        <li><%= link_to 'Signout', signout_path %></li>
      <%else%>
        <!-- SIGN IN WITH FACEBOOK (unstyled)-->
        <li><%= link_to "Sign in with Facebook", "/auth/facebook" %></li>
        <!-- SIGNUP MODAL BUTTON-->
        <a class="waves-effect waves-light btn modal-trigger" href="#Signup">Sign Up</a>
        <!-- SIGNIN MODAL BUTTON-->
        <a class="waves-effect waves-light btn modal-trigger" href="#Signin">Sign In</a>
      <%end%>
