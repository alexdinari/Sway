
<!-- SIGNUP MODAL -->

<div id="Signup" class="modal modal-fixed-footer">
  <div class="modal-content">
    <h4 id="modalHeaders">Signup for Sway News</h4>
    <div class="row">
      <div class = "container">

        <%= form_tag('/signup', method: :post, :class => 'col s12') do %>

        <div class="row">
          <div class="input-field col s12">
            <%= text_field_tag :name,nil,class: "validate" %>
            <label for="first name">Username</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= text_field_tag :email,nil, class: "validate" %>
            <label for="email">Email</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= password_field_tag :password,nil, class: "validate" %>
            <label for="password">Password</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= password_field_tag :password,nil, class: "validate" %>
            <label for="password_confirmation">Confirm Password</label>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
      <i class="mdi-content-send right"></i>
    </button>
  </div>
  <% end %>
</div>
          




