<div class="row">
  <div class = "container">
    <form class="col s12">
      <%= form_for @user do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field_tag :name, nil, class: "validate" %>
            <label for="first name">Username</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.text_field_tag :email, nil, class: "validate" %>
            <label for="email">Email</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.password_field_tag :password, nil, class: "validate" %>
            <label for="password">Password</label>
          </div>
        </div>
        <button class="btn-floating btn-large waves-effect waves-light red">
          <%= f.submit_tag 'Submit' %>
        </button>
      <% end %>
    </form>
  </div>
</div>