<div class="row">
  <form class="col s12">
    <%= form_for(@user) do |f| %>
      <div class="row">
        <div class="input-field col s12">
          <input id="name" type="name" class="validate">
          <label for="name">Username<%= f.text_field :name %></label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate">
          <label for="email">Email<%= f.email_field :email %></label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Password<%= f.password_field :password %></label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">
        Submit
        <i class="mdi-content-send right"><%= f.submit "Create Account"%></i>
      </button>

    <% end %>
  </form>
</div>